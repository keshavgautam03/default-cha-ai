{
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/src/index.js" },
    { "source": "/socket.io/(.*)", "destination": "/backend/src/index.js" },
    { "source": "/(.*)", "destination": "/frontend/dist/$1" }
  ],
  "installCommand": "npm install",
  "env": {
    "FRONTEND_URL": "https://ai-powered-chatapp-x57c.vercel.app"
  }
}
